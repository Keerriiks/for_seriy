<h1>Посты</h1>

<ul>
  <% @articles.each do |article| %>
      <li>
      <% if article.photo.attached? %>
        <%= link_to(article_path(article)) do %>
        <%= image_tag(article.photo.variant(resize_to_limit: [300, 100])) %>
        <span><%= article.title %></span>
<% end %>
      <% else %>
        <%= link_to "Перейти к статье", article_path(article) %>
      <% end %>
      </li>
  <% end %>
</ul>


